---
import { Breadcrumbs } from 'astro-breadcrumbs'
const { breadcrumbs, root } = Astro.props
/*
breadcrumbs = [
  {href: '/', label: 'ホーム'},
  {href: '/children/', label: '子ページA'},
  {href: '/children/children-b/', label: '子ページB', current: true},
]
*/

const customCrumbs = [
  {
    text: 'ホーム',
    href: root,
  },
  ...breadcrumbs,
]
---

<Breadcrumbs mainBemClass="c-breadcrumbs" crumbs={customCrumbs} />
